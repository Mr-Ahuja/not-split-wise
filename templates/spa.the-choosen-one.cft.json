{
  "template": "spa.the-choosen-one",
  "version": "1.0.0",
  "extends": "templates/spa.base.cft.json#1.0.0",
  "requires": {
    "app.framework": { "enum": ["react"] },
    "build.strategy": {
      "enum": ["react_vite"],
      "bindings": {
        "react_vite": { "operator": "op.build.vite", "artifact.patterns": ["dist/**"] }
      }
    },
    "deploy.strategy": {
      "enum": ["github_actions_pages", "git_cli_pages"],
      "bindings": {
        "github_actions_pages": { "operator": "op.deploy.gha.pages" },
        "git_cli_pages": { "operator": "op.deploy.git.pages" }
      }
    },
    "ui.theme": { "enum": ["the_choosen_one"] },
    "ui.buttons.style": { "enum": ["mellange"] },
    "ui.responsive.policy": { "enum": ["mobile_first"] },
    "ui.buttons.icons": { "enum": ["enabled"] },
    "ui.logo.size": { "type": "object" },
    "ui.assets.scripts": { "type": "array" },
    "ui.assets.styles": { "type": "array" },
    "ui.buttons.layout": { "enum": ["primary_secondary_inline"] },
    "ui.footer.attribution": { "enum": ["project_by_preetam"] },
    "runtime.commands": { "type": "object" },
    "artifact.patterns": { "type": "array" }
  },
  "defaults": {
    "artifact.patterns": ["dist/**"],
    "ui.buttons.layout": "primary_secondary_inline",
    "ui.footer.attribution": "project_by_preetam",
    "ui.buttons.style": "mellange",
    "ui.responsive.policy": "mobile_first",
    "ui.buttons.icons": "enabled",
    "ui.logo.size": { "width": 64, "height": 64 },
    "ui.assets.scripts": ["site/coframe/src/lib/constellation.js"],
    "ui.assets.styles": ["site/coframe/src/styles/theme.css"]
  },
  "notes": [
    "Locked to a shared design language across SPAs (the-choosen-one).",
    "Build via Vite, publish to GitHub Pages using Git CLI (gh-pages)."
  ]
}
